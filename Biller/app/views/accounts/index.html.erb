
<p id="notice"><%= notice %></p>
<h1>Cuscomers</h1>

<% @accounts.each do |account| %>
	<% if account.is_a?(Customer) %>
		<ul>
			<li><%= link_to account.name, account_path(account) %></li>
			<li><%= account.type.to_s %></li>
			<li><%= link_to "Delete", account_path(account), method: :delete, data: { confirm: 'Are you sure?' } %></li>			
		</ul>
	<% end %>	
<% end %>

<p><%= link_to "Create Customer", new_account_path %></p>